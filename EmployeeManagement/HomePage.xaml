<Page x:Class="EmployeeManagement.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmployeeManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Button Content="Add Employee" HorizontalAlignment="Left" Margin="60,50,0,0" VerticalAlignment="Top" Width="111" Click="OnAddClick_home"/>
        <Button Content="View Employees" HorizontalAlignment="Left" Margin="60,100,0,0" VerticalAlignment="Top" Width="111" Click="OnViewClick"/>
        <Button Content="Recruiting Stats" HorizontalAlignment="Left" Margin="60,150,0,0" VerticalAlignment="Top" Width="111" Click="OnStatsClick"/>
    </Grid>
</Page>
